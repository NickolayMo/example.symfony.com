 {% extends 'AppBundle:Shared:layout.html.twig' %} 
 {% block title %}Администрирование{% endblock %} 
 {% block body %} 

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Список игр</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">
                    ID
                </th>
                <th>
                    Название
                </th>
                <th class="text-right">
                    Цена
                </th>
                <th class="text-center">
                    Действие
                </th>
            </tr>
            {% for game in games %}
                <tr>
                    <td class="text-right">
                       {{ game.id }}
                    </td>
                    <td>
                         <a href="{{ path('admin_game_edit', { 'id': game.id }) }}">{{game.title}}</a>
                    </td>
                    <td class="text-right">
                       {{ game.price }}  руб
                    </td>
                    <td class="text-center">
                          {{ form_start(delete_form) }}
                                 <input type="submit" class="btn btn-default btn-xs" value="Удалить">
                          {{ form_end(delete_form) }}
                        

                    </td>

                </tr>

            {%endfor%}
        </table>


    </div>
    
    <div class="panel-footer">
        <a asp-action="Create" class="btn btn-default">Добавить игру</a>
    </div>
      <div class="navigation">
    {{ knp_pagination_render(games) }}
</div>
</div>
{% endblock %}
