{% extends 'base.html.twig' %}

{% block body %}
    <h1>Game list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Category</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td><a href="{{ path('admin_game_show', { 'id': game.id }) }}">{{ game.id }}</a></td>
                <td>{{ game.title }}</td>
                <td>{{ game.description }}</td>
                <td>{{ game.category }}</td>
                <td>{{ game.price }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_game_show', { 'id': game.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_game_edit', { 'id': game.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_game_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
